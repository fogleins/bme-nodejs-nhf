<%- include('header') %>
<main class="container mt-3" style="width: fit-content">
    <h1 class="h1 text-primary">Esemény részletei</h1>
    <table class="table table-hover">
        <tr>
            <td>Megnevezés</td>
            <td>
                <%= event.name %>
            </td>
        </tr>
        <tr>
            <td>Esemény kezdete</td>
            <td>
                <%= event.startTime %>
            </td>
        </tr>
        <tr>
        <tr>
            <td>Esemény vége</td>
            <td>
                <%= event.endTime %>
            </td>
        </tr>
        <tr>
            <td>Helyszín</td>
            <td>
                <%= event.location %>
            </td>
        </tr>
        <tr>
            <td>Cél fotós létszám</td>
            <td>
                <%= event.photographersNeeded %>
            </td>
        </tr>
        <tr>
            <td><%= (typeof event.photographersApplied === "undefined") ? "Jelentkezett fotósok"
                        : (event.photographersApplied.length !== 1 ? "Jelentkezett fotósok" : "Jelentkezett fotós") %>
                (<%= (typeof photographersApplied === "undefined") ? "0" : photographersApplied.length %>)
            </td>
            <td>
                <ul>
                    <% (typeof photographersApplied === "undefined") ? "" : photographersApplied.forEach(function(photographer) { %>
                        <li>
                            <%= photographer.name %>
                            (<%= photographer.membershipLevel %>) <a
                                    href="/event/<%= event.id %>/rmphotographer/<%= photographer.id %>">Lejelentkezés</a>
                        </li>
                    <% }); %>
                </ul>
            </td>
        </tr>
        <tr>
            <td>Megjegyzés</td>
            <td>
                <%= event.comment %>
            </td>
        </tr>
    </table>
    <div id="buttons" style="float: right">
        <a href="/events">
            <button class="btn btn-outline-primary">Vissza az eseményekhez</button>
        </a>
    </div>
</main>
<%- include('footer') %>